{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}Liste des Jeux
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
			Liste Jeux</h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 p-4 m-0 text-primary">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr class="fw-bold text-primary text-center">
                                <th scope="col">#</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Cat√©gorie</th>
                                <th scope="col">Prix</th>
                                <th scope="col" class="text-info">Modifier / Voir</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% set i = 1 %}
                        {% for jeu in jeux | sort((a,b)=> a.nom <=> b.nom )%}
                            <tr class="text-center">
                                <td>
                                    {{i}}
                                </td>
                                <td>
                                    {{ jeu.nom | capitalize }}
                                </td>
                                <td>
                                    {{ jeu.categorie.libelle | capitalize }}
                                </td>
                                <td>
                                    {{ jeu.prix }}
                                </td>
                                <td>
                                    <a href="{{path('app_modifier_jeu',{'nom':jeu.nom})}}">
                                        <i class="bi bi-pen-fill"></i>
                                    </a><br>
                                    <a href="{{path('app_jeu',{'nom':jeu.nom})}}">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                            {% set i = i + 1 %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
