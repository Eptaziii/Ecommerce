{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}Jeu
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">{{jeu.nom}}</h1>
		<div class="col-sm-12 text-center">
			<img src="{{ asset('img/' ~ jeu.nom ~ '.jpg' ) }}" alt="{{jeu.nom}}" class="img-responsive" style="width:250px"/>
		</div>
		<div id="carouselExampleIndicators" class="carousel slide mx-auto mt-4 pt-4 fw-bold" style="width:1244px">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="{{ asset('img/' ~ jeu.nom ~ ' Img1.jpg' ) }}" class="img-responsive" alt="Image du jeu: {{jeu.nom}}">
				</div>
				<div class="carousel-item">
					<img src="{{ asset('img/' ~ jeu.nom ~ ' Img2.jpg' ) }}" alt="Image du jeu: {{jeu.nom}}">
				</div>
				<div class="carousel-item">
					<img src="{{ asset('img/' ~ jeu.nom ~ ' Img3.jpg' ) }}" alt="Image du jeu: {{jeu.nom}}">
				</div>
				{% for v in jeu.videos %}
				<div class="carousel-item">
					<iframe width="1244" height="700" src="{{v.url}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
				</div>
				{% endfor %}
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
		<div class="row">
			<div class="col-6 m-5">
				<div class="accordion accordion-flush" id="accordionFlushExample">
					<div class="accordion-item">
						<h2 class="accordion-header" id="flush-headingOne">
							<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
								Description du jeu :
							</button>
						</h2>
						<div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
							<div class="accordion-body">
								<h5>{{jeu.description}}</h5>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col m-5">
				<br><h4 class="text-info">Le prix du jeu :
					{{jeu.prix}}
					â‚¬</h4>
				<p>
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						{% if jeu in app.user.aimer %}
							<a class="btn btn-danger" href="{{path('app_aimer_page',{'id':jeu.id})}}" role="button" style="width:360px">
								<i class="bi bi-heart-fill" title="Mettre en favori"></i>
							</a>
						{% else %}
							<a class="btn btn-danger" href="{{path('app_aimer_page',{'id':jeu.id})}}" role="button" style="width:360px">
								<i class="bi bi-heart" title="Mettre en favori"></i>
							</a>
						{% endif %}
					{% else %}
						<a class="btn btn-danger" href="{{path('app_aimer_page',{'id':jeu.id})}}" role="button" style="width:360px">
							<i class="bi bi-heart" title="Mettre en favori"></i>
						</a>
					{% endif %}
					<button type="button" class="btn btn-success" style="width:360px">
						<i class="bi bi-cart" title="Ajouter au panier"></i>
					</button>
				</p>
			</div>
		</div>
	</div>
{% endblock %}
